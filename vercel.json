{
  "version": 2,
  "builds": [
    {
      "src": "package.json",      // Point to the root package.json
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"         // Use the 'dist' directory for the build output
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/$1"          // Serve files from the 'dist' folder
    }
  ]
}
